<!-- 
Title: RD Console
Used In File(s): \code\modules\research\rdconsole.dm
 -->

{{if data.task}}
    <center><H3><span class="CHANGEME">Systems busy, please stand-by.</span>
    Current task: <span class="average">{{:data.task}}</span></H3></center>
{{else}}
{{if data.screen}}
    <center><H3><span class="CHANGEME">Current Menu</span>: {{:data.textscreen}}</H3>
        <div class="item">
            <div class="itemContent">
                {{:helper.link('Main Menu', 'gear', {'menu' : 1},(data.screen == 1 ? 'selected' : null))}}<br><br>
                {{if data.screen == 1.0}} {{:helper.link('Destructive Analyzer Control','gear', {'menu' :(data.linked_analyzer != null ? 2 : 2.1 )})}}<br><br>{{/if}}
                {{if data.screen == 1.0}} {{:helper.link('Protolathe Control', 'gear', {'menu' :(data.linked_lathe != null ? 3 : 3.1)})}}<br><br>{{/if}}
                {{if data.screen == 1.0}} {{:helper.link('Circuit Imprinter Control', 'gear', {'menu' :(data.linked_imprinter != null ? 4 : 4.1)})}}<br><br>{{/if}}
                {{if data.screen == 1.0}} {{:helper.link('Device Management', 'gear', {'menu' : 5})}}{{/if}}
            </div>
        </div>
{{/if}}
{{if data.screen}}
    {{if data.screen == 2.0}}
        <b><H3><center>No Destructive Analyzer Linked!</center></H3></b>
    {{/if}}

    {{if data.screen == 3.0}}
        <b><H3><center>No Protolathe Linked!</center></H3></b>
    {{/if}}

    {{if data.screen == 4.0}}
        <b><H3><center>No Circuit Imprinter Linked!</center></H3></b>
    {{/if}}

    {{if data.screen == 5.0}}
        {{:helper.link('Link Nearby Devices', 'gear', {'find_device' : 'find_device'})}}<br><br>
        {{:helper.link('Print Research Overview', 'gear', {'print' : 'print'})}}
    {{/if}}
{{/if}}
{{/if}}


