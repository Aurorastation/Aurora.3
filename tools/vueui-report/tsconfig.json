{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2015",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types", "types"],
    "sourceMap": true,
    "rootDir": "src",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "test", "types"]
}
